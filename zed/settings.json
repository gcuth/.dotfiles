// =============================================================================
// ZED SETTINGS
// =============================================================================
// Zed editor configuration for the dotfiles repository.
// Documentation: https://zed.dev/docs/configuring-zed
//
// To see default settings: cmd+shift+p -> "zed: open default settings"
// =============================================================================

{
  // ---------------------------------------------------------------------------
  // Privacy & Telemetry
  // ---------------------------------------------------------------------------
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  // ---------------------------------------------------------------------------
  // Editor Behavior
  // ---------------------------------------------------------------------------
  "vim_mode": true,
  "base_keymap": "VSCode",

  // Autosave after 1 second of inactivity
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },

  // Soft wrap for prose-heavy files
  "soft_wrap": "editor_width",

  // Show whitespace characters
  "show_whitespaces": "selection",

  // Cursor blink rate (0 to disable)
  "cursor_blink": true,

  // ---------------------------------------------------------------------------
  // Appearance
  // ---------------------------------------------------------------------------
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },

  "ui_font_size": 16,
  "buffer_font_size": 15,
  "buffer_font_family": "Fira Code",

  // Line height (1.0 = single spacing)
  "buffer_line_height": {
    "custom": 1.5
  },

  // Show git gutter indicators
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true,
      "delay_ms": 500
    }
  },

  // ---------------------------------------------------------------------------
  // Inlay Hints (type info, parameter names)
  // ---------------------------------------------------------------------------
  "inlay_hints": {
    "enabled": true,
    "show_value_hints": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "show_background": false,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50
  },

  // ---------------------------------------------------------------------------
  // File & Project Settings
  // ---------------------------------------------------------------------------
  // Files to exclude from search and file tree
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/node_modules",
    "**/.venv",
    "**/venv",
    "**/__pycache__",
    "**/target",
    "**/build",
    "**/dist",
    "**/.next",
    "**/.cache"
  ],

  // ---------------------------------------------------------------------------
  // Terminal
  // ---------------------------------------------------------------------------
  "terminal": {
    "shell": {
      "program": "/bin/zsh"
    },
    "font_size": 14,
    "line_height": {
      "custom": 1.4
    }
  },

  // ---------------------------------------------------------------------------
  // Language-Specific Settings
  // ---------------------------------------------------------------------------
  "languages": {
    // Markdown: wider wrap, spell check
    "Markdown": {
      "soft_wrap": "preferred_line_length",
      "preferred_line_length": 80,
      "show_whitespaces": "none"
    },

    // Python: PEP8 line length
    "Python": {
      "preferred_line_length": 88,
      "tab_size": 4
    },

    // JavaScript/TypeScript: 2-space indent
    "JavaScript": {
      "tab_size": 2
    },
    "TypeScript": {
      "tab_size": 2
    },
    "TSX": {
      "tab_size": 2
    },

    // Shell scripts: 2-space indent
    "Shell Script": {
      "tab_size": 2
    },

    // YAML: 2-space indent
    "YAML": {
      "tab_size": 2
    },

    // JSON: 2-space indent
    "JSON": {
      "tab_size": 2
    },

    // Clojure
    "Clojure": {
      "tab_size": 2
    }
  },

  // ---------------------------------------------------------------------------
  // Formatter Settings
  // ---------------------------------------------------------------------------
  "format_on_save": "on"
}
